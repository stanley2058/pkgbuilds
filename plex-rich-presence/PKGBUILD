# Maintainer: Stanley Wang <stanley@stw.tw>

pkgname=plex-rich-presence
pkgver=2.0.9
pkgrel=1
pkgdesc="A desktop app to enable discord rich presence for your Plex Media Server Activity"
arch=(any)
provides=(PlexRichPresence.UI.Avalonia)
conflicts=()
url='https://github.com/Ombrelin/plex-rich-presence'
license=(MIT)
depends=(dotnet-runtime-6.0)
makedepends=(tar xz)
source=('https://github.com/Ombrelin/plex-rich-presence/releases/download/2.0.9/PlexRichPresence.UI.Avalonia.2.0.8.deb')
sha256sums=('920f0762323c10076fd69be2e94e34abc794a46c206f7d73d4b544d7263f7a9b')

build() {
  cd "${srcdir}" || exit 1
  ar xv ./*.deb
  tar xf data.tar.xz 
}

package() {
  cp -r usr "${pkgdir}/"
}
