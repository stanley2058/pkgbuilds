# Maintainer: Stanley Wang <stanley@stw.tw>

pkgname=plex-rich-presence
pkgver=2.0.8
pkgrel=1
pkgdesc="A desktop app to enable discord rich presence for your Plex Media Server Activity"
arch=(any)
provides=(PlexRichPresence.UI.Avalonia)
conflicts=()
url='https://github.com/Ombrelin/plex-rich-presence'
license=(MIT)
depends=(dotnet-runtime-6.0)
makedepends=(tar xz)
source=('https://github.com/Ombrelin/plex-rich-presence/releases/download/2.0.8/PlexRichPresence.UI.Avalonia.2.0.8.deb')
sha256sums=('de53727553401328e46a54956650005080d05305ce2ecb5eac6945686661ab03')

build() {
  cd "${srcdir}" || exit 1
  ar xv ./*.deb
  tar xf data.tar.xz 
}

package() {
  cp -r usr "${pkgdir}/"
}
