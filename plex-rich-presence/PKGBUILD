# Maintainer: Stanley Wang <stanley@stw.tw>

pkgname=plex-rich-presence
pkgver=2.1.0
pkgrel=1
pkgdesc="A desktop app to enable discord rich presence for your Plex Media Server Activity"
arch=(any)
provides=(PlexRichPresence.UI.Avalonia)
conflicts=()
url='https://github.com/Ombrelin/plex-rich-presence'
license=(MIT)
depends=(dotnet-runtime-6.0)
makedepends=(tar xz)
source=('https://github.com/Ombrelin/plex-rich-presence/releases/download/2.1.0/PlexRichPresence.UI.Avalonia.2.0.10.deb')
sha256sums=('236aa9886224f9777fd20f4a75f98346a1cfa8d1130e54ec29a99d972cf7b9c1')

build() {
  cd "${srcdir}" || exit 1
  ar xv ./*.deb
  tar xf data.tar.xz 
}

package() {
  cp -r usr "${pkgdir}/"
}
